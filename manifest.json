{
  "manifest_version": 2,
  "name": "Osiris Automatic Registration",
  "version": "1.0",
  "description": "Register yourself automatically to all enrolled courses in BrightSpace.",
  "icons": {
    "128": "static/icons/icon128.png",
    "48": "static/icons/icon48.png",
    "16": "static/icons/icon16.png"
  },
  "browser_action": {
    "default_icon": "static/icons/icon16.png",
    "default_popup": "static/popup.html"
  },
  "options_page": "static/options.html",
  "background": {
    "scripts": ["background-scripts/background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "tabs",
    "https://*/*",
    "http://*/*"
  ]
}
