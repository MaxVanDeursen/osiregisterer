{
  "manifest_version": 2,
  "name": "Osiris Automatic Registration",
  "version": "1.0",
  "description": "Register yourself automatically to all enrolled courses in BrightSpace.",
  "icons": {
    "128": "icons/icon128.png",
    "48": "icons/icon48.png",
    "16": "icons/icon16.png"
  },
  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "background": {
    "scripts": ["packages/lodash.js","background/background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "tabs",
    "https://*/*",
    "http://*/*"
  ]
}
